<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!-- 标题 -->
        <RelativeLayout
			android:id="@+id/frameHead"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:background="@drawable/header_bg">
			<Button
		        android:id="@+id/returnBtn"
		        style="@style/top_backbtn_style"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:text="@string/fan_hui"
		        android:layout_marginLeft="5dp" />
			<TextView
				android:id="@+id/title"
		        style="@style/textview_style_0"
		        android:text="@string/tu_ya_tp"
				android:layout_centerInParent="true"
				android:layout_marginLeft="130dp" />
			<Button
		        android:id="@+id/rightBtn"
		        style="@style/top_rightbtn_style"
		        android:minWidth="70dp"
		        android:text="@string/que_ding"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="5dp"
		        android:layout_centerVertical="true" />
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/doodleLayout"
		    android:layout_below="@+id/frameHead"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" />
    </RelativeLayout>
    <!-- 操作条和选择画笔 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
		<!-- 选择画笔操作 -->
		<RelativeLayout
		    android:id="@+id/penOperate"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="@color/doodle_select_pen_bg"
		    android:visibility="gone">
			<!-- 选择画笔颜色 -->
		    <LinearLayout
		        android:id="@+id/penColorOperate"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:orientation="horizontal">
		        <Button
	                android:id="@+id/selectPenSize"
	                android:layout_width="36dp"
	                android:layout_height="36dp"
	                android:background="@drawable/icon_imgedit_size"
	                android:layout_marginLeft="10dp"/>
		        <RelativeLayout
		            android:id="@+id/color1Layout"
				    android:layout_width="36dp"
				    android:layout_height="36dp"
				    android:padding="6dp"
				    android:layout_marginLeft="8dp">
				    <TextView 
				        android:id="@+id/color1"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:background="@color/doodle_pen_color_ys1"/>
				</RelativeLayout>
				<RelativeLayout
		            android:id="@+id/color2Layout"
				    android:layout_width="36dp"
				    android:layout_height="36dp"
				    android:padding="6dp"
				    android:layout_marginLeft="8dp">
				    <TextView 
				        android:id="@+id/color2"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:background="@color/doodle_pen_color_ys2"/>
				</RelativeLayout>
				<RelativeLayout
		            android:id="@+id/color3Layout"
				    android:layout_width="36dp"
				    android:layout_height="36dp"
				    android:padding="6dp"
				    android:layout_marginLeft="8dp">
				    <TextView 
				        android:id="@+id/color3"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:background="@color/doodle_pen_color_ys3"/>
				</RelativeLayout>
				<RelativeLayout
		            android:id="@+id/color4Layout"
				    android:layout_width="36dp"
				    android:layout_height="36dp"
				    android:padding="6dp"
				    android:layout_marginLeft="8dp">
				    <TextView 
				        android:id="@+id/color4"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:background="@color/doodle_pen_color_ys4"/>
				</RelativeLayout>
				<RelativeLayout
		            android:id="@+id/color5Layout"
				    android:layout_width="36dp"
				    android:layout_height="36dp"
				    android:padding="6dp"
				    android:layout_marginLeft="8dp">
				    <TextView 
				        android:id="@+id/color5"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:background="@color/doodle_pen_color_ys5"/>
				</RelativeLayout>
				<RelativeLayout
		            android:id="@+id/color6Layout"
				    android:layout_width="36dp"
				    android:layout_height="36dp"
				    android:padding="6dp"
				    android:layout_marginLeft="8dp">
				    <TextView 
				        android:id="@+id/color6"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:background="@color/doodle_pen_color_ys6"/>
				</RelativeLayout>
		    </LinearLayout>
			<!-- 画笔字体大小 -->
		    <LinearLayout
		        android:id="@+id/penSizeOperate"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:orientation="horizontal"
		        android:visibility="gone">
		        <Button 
	               android:id="@+id/selectPenColor"
	               android:layout_width="36dp"
	               android:layout_height="36dp"
	               android:background="@drawable/icon_imgedit_color"
	               android:layout_marginLeft="10dp"/>
		           <com.xuan.tuya.view.PointView
		                android:id="@+id/penSize1"
		                android:layout_width="36dp"
		                android:layout_height="36dp"
		                android:layout_marginLeft="10dp" />
		            <com.xuan.tuya.view.PointView
		                android:id="@+id/penSize2"
		                android:layout_width="36dp"
		                android:layout_height="36dp"
		                android:layout_marginLeft="10dp" />
		            <com.xuan.tuya.view.PointView
		                android:id="@+id/penSize3"
		                android:layout_width="36dp"
		                android:layout_height="36dp"
		                android:layout_marginLeft="10dp" />
		            <com.xuan.tuya.view.PointView
		                android:id="@+id/penSize4"
		                android:layout_width="36dp"
		                android:layout_height="36dp"
		                android:layout_marginLeft="10dp" />
		            <com.xuan.tuya.view.PointView
		                android:id="@+id/penSize5"
		                android:layout_width="36dp"
		                android:layout_height="36dp"
		                android:layout_marginLeft="10dp" />
		            <com.xuan.tuya.view.PointView
		                android:id="@+id/penSize6"
		                android:layout_width="36dp"
		                android:layout_height="36dp"
		                android:layout_marginLeft="10dp" />
		    </LinearLayout>
		</RelativeLayout>
		
		<!-- 操作条 -->
		<RelativeLayout
	        android:id="@+id/operateLayout"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/tab_bg">
	        <!-- 重置 -->
	        <RelativeLayout
	            android:id="@+id/resetLayout"
	            android:layout_width="60dp"
	            android:layout_height="fill_parent"
	            android:layout_alignParentLeft="true"
	            android:background="@drawable/bg_imgedit"
	            android:clickable="true"
	            android:paddingTop="4dp">
	            <ImageView
	                android:id="@+id/resetImg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/tabbtn0_imgedit_normal"
	                android:layout_centerHorizontal="true"
	                android:contentDescription="@string/no_word"/>
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/resetImg"
	                android:textSize="13sp"
	                android:textColor="@color/doodle_tab_text"
	                android:text="@string/chong_zhi"
	                android:layout_centerHorizontal="true"/>
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:background="@drawable/line_imgedit"
	                android:layout_alignParentRight="true"
	                android:contentDescription="@string/no_word"/>
	        </RelativeLayout>
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_toRightOf="@+id/resetLayout"
	            android:orientation="horizontal">
	            <ImageView
	                android:id="@+id/penBtn"
	                android:layout_width="0dp"
	                android:layout_weight="0.5"
	                android:layout_height="fill_parent"
	                android:scaleType="centerInside"
	                android:src="@drawable/tabbtn5_imgedit_normal"
	                android:contentDescription="@string/no_word"/>
	            <ImageView
	                android:id="@+id/penBack"
	                android:layout_width="0dp"
	                android:layout_weight="0.5"
	                android:layout_height="fill_parent"
	                android:scaleType="centerInside"
	                android:src="@drawable/tabbtn7_imgedit"
	                android:clickable="true"
	                android:contentDescription="@string/no_word"/>
	        </LinearLayout>
	    </RelativeLayout>
    </LinearLayout>
</LinearLayout>